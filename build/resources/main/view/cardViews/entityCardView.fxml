<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.BorderPane?>
<AnchorPane fx:id="container" maxHeight="866" maxWidth="489" prefHeight="866" prefWidth="489"
            xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="de.prog2.dungeontop.view.cardViews.EntityCardView" onMouseEntered="#mouseEntered" onMouseExited="#mouseExited">
    <ImageView fx:id="backgroundImageView" fitHeight="866" fitWidth="489" />
    <!-- Summon Cost -->
    <StackPane fx:id="summonCostContainer" AnchorPane.leftAnchor="225" AnchorPane.topAnchor="25">
        <ImageView fx:id="summonImageView" fitHeight="55" fitWidth="55" />
        <Label fx:id="summonCostLabel" styleClass="status-label" text="0" />
    </StackPane>
    <!-- HP -->
    <StackPane fx:id="hpContainer" AnchorPane.leftAnchor="334.0" AnchorPane.topAnchor="460">
        <ImageView fx:id="hpImageView" fitHeight="55" fitWidth="55" />
        <Label fx:id="hpLabel" styleClass="status-label" text="0" />
    </StackPane>
    <!-- Attack -->
    <StackPane fx:id="attackContainer" AnchorPane.leftAnchor="100" AnchorPane.topAnchor="460">
        <ImageView fx:id="attackImageView" fitHeight="55" fitWidth="55" />
        <Label fx:id="attackLabel" styleClass="status-label" text="0" />
    </StackPane>
    <!-- Movement -->
    <StackPane fx:id="movementContainer" AnchorPane.leftAnchor="209.0" AnchorPane.topAnchor="460">
        <ImageView fx:id="movementImageView" fitHeight="55" fitWidth="55" />
        <Label fx:id="movementLabel" styleClass="status-label" text="0" />
    </StackPane>

    <!-- Name -->
    <BorderPane fx:id="nameContainer" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="125">
        <center>
            <Label fx:id="entityNameLabel" styleClass="header-label" text="name" />
        </center>
    </BorderPane>
    <!-- EntityImage -->
    <BorderPane fx:id="entityImageContainer" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="45">
        <center>
            <ImageView fx:id="entityImageView"/>
        </center>
    </BorderPane>

    <!-- Rank -->
    <StackPane fx:id="rankContainer" AnchorPane.leftAnchor="225" AnchorPane.topAnchor="791.0">
        <ImageView fx:id="rankImageView" fitHeight="55" fitWidth="55" scaleX="1.2" scaleY="1.2" />
        <Label fx:id="rankLabel" styleClass="status-label" text="0" />
    </StackPane>
</AnchorPane>
