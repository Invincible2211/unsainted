<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="container" prefHeight="469.0" prefWidth="469.0"
            xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="de.prog2.dungeontop.view.EntityView" stylesheets="@view/entityStyle.css"
            onMouseEntered="#mouseEntered" onMouseExited="#mouseExited">
    <ImageView fx:id="backgroundImageView" fitHeight="469" fitWidth="469" />
    <!-- Entity -->
    <VBox AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0" alignment="CENTER">
        <ImageView fx:id="entityImageView" fitHeight="354" fitWidth="340"/>
    </VBox>
    <!-- HP -->
    <StackPane AnchorPane.leftAnchor="40" AnchorPane.topAnchor="60">
        <ImageView fx:id="hpImageView" fitHeight="120" fitWidth="120" />
        <Label fx:id="hpLabel" styleClass="status-label" text="0" style="-fx-font-size: 70"/>
    </StackPane>
    <!-- Movement -->
    <StackPane AnchorPane.leftAnchor="200" AnchorPane.topAnchor="350">
        <ImageView fx:id="movementImageView" fitHeight="120" fitWidth="120" />
        <Label fx:id="movementLabel" styleClass="status-label" text="0" style="-fx-font-size: 70"/>
    </StackPane>
    <!-- Attack -->
    <StackPane AnchorPane.leftAnchor="350" AnchorPane.topAnchor="60">
        <ImageView fx:id="attackImageView" fitHeight="120" fitWidth="120" />
        <Label fx:id="attackLabel" styleClass="status-label" text="0" style="-fx-font-size: 70"/>
    </StackPane>
</AnchorPane>
