                      <TitledPane animated="false" text="WIP RINGBUFFER letzter zuege">
                        <content>
                          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                        </content>
                      </TitledPane>
                    </panes>
                  </Accordion>
               </children>
            </VBox>
         </left>
         <center>
            <GridPane fx:id="battlefieldGridPane" BorderPane.alignment="CENTER">
            </GridPane>
         </center>
         <bottom>
            <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
               <children>
                  <HBox fx:id="playerHandHBox" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <StackPane prefHeight="20.0" prefWidth="20.0">
