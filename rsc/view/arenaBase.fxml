                  <Button fx:id="endPhaseButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onMouseClicked="#endTurn" text="End Phase" textAlignment="CENTER" />
                  <Pane fx:id="deckdisplay" prefHeight="200.0" prefWidth="200.0" />
               </children>
            </VBox>
         </right>
         <left>
            <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
               <children>
                  <Accordion fx:id="lastMovesAccordion">
                    <panes>
                      <TitledPane animated="false" text="WIP RINGBUFFER letzter zuege">
