               <children>
                  <HBox fx:id="enemyHandHBox" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <StackPane prefHeight="20.0" prefWidth="20.0">
                           <children>
                              <ImageView fx:id="egopointsPlayerTwoImageView" fitHeight="20" fitWidth="20" pickOnBounds="true" preserveRatio="true"/>
                              <Label fx:id="egopointsPlayerTwo" text="Label" alignment="CENTER" />
